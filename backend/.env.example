# PocketGenie Backend Configuration

# App
APP_NAME=PocketGenie
APP_VERSION=0.1.0
DEBUG=True

# Database
# For SQLite (default):
DATABASE_URL=sqlite:///./pocketgenie.db

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/pocketgenie

# CORS
CORS_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:8080", "http://localhost:8081"]

# AI/LLM
ZEPHYR_API_URL=http://localhost:8001
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=pocketgenie

# Redis
REDIS_URL=redis://localhost:6379

